{
  "name": "typescript-docs-verifier",
  "description": "Randomised test property/data generation for NodeJS",
  "keywords": [
    "typescript",
    "documentation",
    "compile",
    "compilation",
    "check",
    "code",
    "blocks",
    "generator",
    "markdown"
  ],
  "version": "0.3.0",
  "main": "dist/index.js",
  "bin": "./dist/bin/compile-typescript-docs.js",
  "license": "Apache-2.0",
  "author": "BBC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bbc/typescript-docs-verifier.git"
  },
  "bugs": {
    "url": "https://github.com/bbc/typescript-docs-verifier/issues"
  },
  "homepage": "https://github.com/bbc/typescript-docs-verifier#readme",
  "scripts": {
    "pretest": "npm run-script build",
    "test": "npm-run-all -p -c unittest lint",
    "unittest": "scripts/test-with-coverage.sh",
    "lint": "tslint --project ./ --exclude \"node_modules/*/**.ts\"",
    "build": "rm -rf dist && tsc",
    "precompile-docs": "npm run-script build",
    "compile-docs": "node ./dist/bin/compile-typescript-docs.js",
    "prepublishOnly": "npm-run-all -s build compile-docs"
  },
  "devDependencies": {
    "@types/bluebird": "^3.5.24",
    "@types/chai": "^4.1.4",
    "@types/chai-as-promised": "^7.1.0",
    "@types/fs-extra": "^5.0.4",
    "@types/mocha": "^5.2.5",
    "@types/node": "^8.0.0",
    "@types/ora": "^1.3.4",
    "@types/yargs": "^12.0.0",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "mocha": "^5.2.0",
    "mocha-jenkins-reporter": "^0.4.0",
    "npm-run-all": "^4.1.3",
    "nyc": "^13.0.1",
    "tslint": "^5.11.0",
    "tslint-config-standard": "^8.0.1",
    "tslint-immutable": "^4.7.0",
    "verify-it": "^1.0.0"
  },
  "dependencies": {
    "bluebird": "^3.5.2",
    "chalk": "^2.4.1",
    "fs-extra": "^7.0.0",
    "left-pad": "^1.3.0",
    "ora": "^3.0.0",
    "ts-node": "^7.0.1",
    "tsconfig": "^7.0.0",
    "typescript": "^3.0.3",
    "yargs": "^12.0.2"
  },
  "files": [
    "dist/index.js",
    "dist/index.d.ts",
    "dist/index.js.map",
    "dist/bin",
    "dist/src"
  ]
}
