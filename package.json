{
  "name": "typescript-docs-verifier",
  "description": "Verifies that typescript examples in markdown files actually compile.",
  "keywords": [
    "block",
    "blocks",
    "build",
    "check",
    "code",
    "compilation",
    "compile",
    "doc",
    "docs",
    "documentation",
    "markdown",
    "md",
    "ts",
    "typescript",
    "verify"
  ],
  "version": "2.2.0",
  "main": "dist/index.js",
  "@types": "dist/index.d.ts",
  "bin": "./dist/bin/compile-typescript-docs.js",
  "license": "Apache-2.0",
  "author": "BBC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bbc/typescript-docs-verifier.git"
  },
  "bugs": {
    "url": "https://github.com/bbc/typescript-docs-verifier/issues"
  },
  "homepage": "https://github.com/bbc/typescript-docs-verifier#readme",
  "engines": {
    "node": ">=12"
  },
  "scripts": {
    "pretest": "npm run-script build",
    "test": "npm-run-all -p -c unittest lint",
    "posttest": "npm-run-all compile-docs",
    "unittest": "scripts/test-with-coverage.sh",
    "lint": "eslint '**/*.ts'",
    "build": "rm -rf dist && tsc",
    "compile-docs": "node ./dist/bin/compile-typescript-docs.js",
    "prepublishOnly": "npm-run-all -s build compile-docs"
  },
  "devDependencies": {
    "@types/chai": "^4.1.4",
    "@types/chai-as-promised": "^7.1.0",
    "@types/fs-extra": "^9.0.13",
    "@types/mocha": "^9.0.0",
    "@types/node": "^12.0.0",
    "@types/yargs": "^17.0.3",
    "@typescript-eslint/eslint-plugin": "^4.32.0",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "eslint": "^7.32.0",
    "eslint-config-standard-with-typescript": "^21.0.1",
    "eslint-plugin-functional": "^3.7.2",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.0",
    "mocha": "^9.2.1",
    "mocha-jenkins-reporter": "^0.4.7",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.0.0",
    "typescript": "4.3.5",
    "verify-it": "^2.0.1"
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "fs-extra": "^10.0.0",
    "ora": "^5.4.1",
    "strip-ansi": "^6.0.1",
    "ts-node": "10.4.0",
    "tsconfig": "^7.0.0",
    "yargs": "^17.2.1"
  },
  "peerDependencies": {
    "typescript": ">3.8.3"
  },
  "files": [
    "dist/index.js",
    "dist/index.d.ts",
    "dist/index.js.map",
    "dist/bin",
    "dist/src"
  ]
}
